  "devDependencies": {
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jest": "^29.5.0",
    "jest": "^30.2.0",
    "jest-chrome": "^0.8.0",
