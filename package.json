  "directories": {
    "test": "tests"
  },
  "scripts": {
    "test": "jest",
    "test:unit": "jest tests/unit.test.js",
    "test:e2e": "jest tests/e2e.test.js --runInBand --forceExit",
    "lint": "eslint .",
    "format": "prettier --write .",
    "package": "zip -r tl-dv-transcript-grabber.zip . -x \"node_modules/*\" \"tests/*\" \".git/*\" \".github/*\" \".prettierrc\" \"eslint.config.js\" \"package*\" \"readme.md\" \"LICENSE\" \"privacy-policy.md\" \".DS_Store\" \".gitignore\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/User17745/tl-dv-Transcript-Grabber.git"
  },
