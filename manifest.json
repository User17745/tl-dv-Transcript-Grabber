{
  "manifest_version": 3,
  "name": "Transcript Scraper",
  "version": "1.0",
  "description": "Extract and copy transcript from meeting recordings.",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "permissions": [
    "scripting",
    "activeTab",
    "clipboardWrite"
  ],
  "host_permissions": [
    "*://*.tldv.io/*"
  ]
}