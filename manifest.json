{
  "manifest_version": 3,
  "name": "tl;dv Transcript Grabber",
  "version": "1.0",
  "description": "Extract and copy transcripts from tl;dv meeting recordings.",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "assets/icons/icon16.png",
      "48": "assets/icons/icon48.png",
      "128": "assets/icons/icon128.png"
    }
  },
  "host_permissions": [
    "*://*.tldv.io/*"
  ],
  "permissions": ["scripting", "activeTab", "clipboardWrite"]
}